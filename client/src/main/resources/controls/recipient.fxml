<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.HBox?>

<fx:root styleClass="recipient" stylesheets="@recipient.css" type="HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <Hyperlink fx:id="emailDisplay" styleClass="recipient-email" text="user@domain.tld">
      <padding>
         <Insets top="5.0" />
      </padding></Hyperlink>
   <Button fx:id="removeButton" mnemonicParsing="false" styleClass="recipient-remove-button" text="x" />
   <padding>
      <Insets bottom="2.0" left="6.0" />
   </padding>
</fx:root>
