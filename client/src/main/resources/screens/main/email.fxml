<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="di.unito.it.prog3.client.controllers.QueueViewController">
   <children>
      <HBox id="toolbar" spacing="15.0">
         <children>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#write" text="Write">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../893229-email/png/041-email-2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#forward" text="Forward">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../893229-email/png/010-email-25.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#reply" text="Reply">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../893229-email/png/008-reply.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#replyAll" text="Reply All">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../893229-email/png/009-reply-all.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <!--<Button contentDisplay="TOP" disable="true" mnemonicParsing="false" text="Send">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../893229-email/png/006-email-27.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>-->
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#delete" text="Delete">
               <graphic>
                  <ImageView fitHeight="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../893229-email/png/024-mailbox-2.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="7.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
      <TabPane fx:id="browser" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Received">
               <content>
                  <AnchorPane>
                     <ListView fx:id="listView" onMouseClicked="#emailClicked" styleClass="email-list-view" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" />
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Sent">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab text="Drafts">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
